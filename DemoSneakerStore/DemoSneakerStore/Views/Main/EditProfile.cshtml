@{
    Layout = "Main_Layout";
}
@model DemoSneakerStore.Models.Customer

<div class="wrapper">
    <div class="sidebar" data-color="black" style="background-image: url(/images/sidebar-5.jpg)">
        <div class="sidebar-wrapper">
            <div class="logo">
                <a asp-action="Index" asp-controller="Main" class="simple-text">Sneaker World</a>
            </div>

            @if (ViewBag.Account != null)
            {
                <ul class="nav">
                    <li class="active">
                        <a asp-action="Index" asp-controller="Cart">
                            <i class="pe-7s-user"></i>
                            <p>Cart</p>
                        </a>
                    </li>
                    <li class="active">
                        <a asp-action="History" asp-controller="Cart">
                            <i class="pe-7s-user"></i>
                            <p>History</p>
                        </a>
                    </li>
                    <li class="active">
                        <a asp-action="EditProfile" asp-controller="Main">
                            <i class="pe-7s-user"></i>
                            <p>Edit Profile</p>
                        </a>
                    </li>
                </ul>
            }
        </div>
    </div>


    <div class="main-panel" style="background-color: white">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" asp-action="Index" asp-controller="Dashboard">Shop</a>
                </div>
                <div class="collapse navbar-collapse">

                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            @if (ViewBag.Account != null)
                            {
                                <a><p>@ViewBag.Account</p></a>
                            }
                            else
                            {
                                <a asp-action="Index" asp-controller="Login"><p>Login</p></a>
                            }
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <p>Menu<b class="caret"></b></p>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Maker</a></li>
                                <li><a href="#">Category</a></li>
                                <li><a href="#">Origin</a></li>
                                <li><a href="#">Color</a></li>
                                <li><a href="#">Size</a></li>
                            </ul>
                        </li>
                        <li>
                            @if (ViewBag.Account != null)
                            {
                                <a asp-action="Logout" asp-controller="Login"><p>Log out</p></a>
                            }
                        </li>
                        <li class="separator hidden-lg"></li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="content">

            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Edit Profile</h4>
                            </div>
                            <div class="content">
                                <form asp-action="UpdateProfile" asp-controller="Main" method="post">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Username</label>
                                                <input type="text" class="form-control" name="username" placeholder="Username" value="@Model.Username"
                                                       required readonly="readonly">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Password</label>
                                                <input type="password" class="form-control" name="password" placeholder="Password..."
                                                       value="@Model.UsernameNavigation.Password" required>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label>Full Name</label>
                                                <input type="text" class="form-control" placeholder="Full Name" 
                                                       value="@Model.FullName" required name="fullname">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Phone Number</label>
                                                <input type="text" class="form-control" placeholder="Phone Number" 
                                                       value="@Model.MobileNumber" required name="phonenumber">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <button type="submit" class="btn btn-info btn-group" style="margin-left: 50%">Update Profile</button>
                                        </div>
                                    </div>



                                    <div class="clearfix"></div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <footer class="footer">
            <div class="container-fluid">

                <p class="copyright pull-right">
                    &copy;
                    <script>document.write(new Date().getFullYear())</script> <a>SneakerFloat</a>, made with love for a better service
                </p>
            </div>
        </footer>
    </div>
</div>

<script src="/js/jquery.3.2.1.min.js" type="text/javascript"></script>
<script src="/js/bootstrap.min.js" type="text/javascript"></script>
<script src="/js/chartist.min.js"></script>
<script src="/js/bootstrap-notify.js" rel="script" type="text/javascript"></script>
<script src="/js/light-bootstrap-dashboard.js?v=1.4.0" rel="script" type="text/javascript"></script>