@{
    Layout = "Account_Layout";
}
@model DemoSneakerStore.Models.Account

<div class="wrapper">
    <div class="sidebar" data-color="black">
        <div class="sidebar-wrapper">
            <div class="logo">
                <a class="simple-text">
                    Sneaker World
                </a>
            </div>

            <ul class="nav">
                <li class="active">
                    <a asp-action="Account" asp-controller="Dashboard">
                        <i class="pe-7s-id"></i>
                        <p>Account List</p>
                    </a>
                </li>
                <li class="active">
                    <a asp-action="CreateAccount" asp-controller="Account">
                        <i class="pe-7s-user"></i>
                        <p>Create Account</p>
                    </a>
                </li>
                <li class="active">
                    <a asp-action="CreateShoes" asp-controller="ShoesManage">
                        <i class="pe-7s-upload"></i>
                        <p>Create Shoes</p>
                    </a>
                </li>
                <li class="active">
                    <a asp-action="Index" asp-controller="Bill">
                        <i class="pe-7s-user"></i>
                        <p>Import Bill List</p>
                    </a>
                </li>
                <li class="active">
                    <a asp-action="InsertImportBill" asp-controller="Bill">
                        <i class="pe-7s-user"></i>
                        <p>Insert Import Bill</p>
                    </a>
                </li>
                <li class="active">
                    <a asp-action="ExportBill" asp-controller="Bill">
                        <i class="pe-7s-user"></i>
                        <p>Export Bill List</p>
                    </a>
                </li>
            </ul>
        </div>
    </div>


    <div class="main-panel">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" asp-action="Index" asp-controller="Dashboard">Shop</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-left">
                        <li>
                            @if (ViewBag.Account != null)
                            {
                                <a><p>@ViewBag.Account</p></a>
                            }
                            else
                            {
                                <a asp-action="Index" asp-controller="Login"><p>Login</p></a>
                            }
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <p>Menu<b class="caret"></b></p>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Maker</a></li>
                                <li><a href="#">Category</a></li>
                                <li><a href="#">Origin</a></li>
                                <li><a href="#">Color</a></li>
                                <li><a href="#">Size</a></li>
                            </ul>
                        </li>
                        <li>
                            @if (ViewBag.Account != null)
                            {
                                <a asp-action="Logout" asp-controller="Login"><p>Log out</p></a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="content">

            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Create Profile</h4>
                            </div>
                            <div class="content">
                                <form asp-action="CreateExecute" asp-controller="Account" method="post">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Username</label>
                                                <input type="text" class="form-control" name="username" placeholder="Username" 
                                                       asp-for="UserName" required autocomplete="off">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Password</label>
                                                <input type="password" class="form-control" name="password" placeholder="Password..."
                                                       asp-for="Password" required autocomplete="off">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Full Name</label>
                                                <input type="text" class="form-control" placeholder="FullName..." name="fullname"
                                                       autocomplete="off">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Mobile Number</label>
                                                <input type="text" class="form-control" placeholder="FullName..." name="mobilenumber" 
                                                       autocomplete="off">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="content">
                                        <label>Type</label>
                                        <table class="table-full-width">
                                            <table class="table">
                                                <tbody>
                                                <tr>
                                                    <td>
                                                        <input type="radio" name="type" value="1" required>
                                                    </td>
                                                    <td>Admin</td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <input type="radio" name="type" value="0" required>
                                                    </td>
                                                    <td>Customer</td>
                                                </tr>
                                                </tbody>
                                            </table>
                                        </table>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-9">
                                            <button type="submit" class="btn btn-info btn-fill" style="margin-left: 50%">Create Profile</button>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        @if (TempData["Message"] != null)
                                        {  
                                            <p style="text-align: center" class="alert alert-danger">@TempData["Message"]</p>  
                                        }  
                                    </div>
                                    <div class="clearfix"></div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card card-user">
                            <div class="image">
                                <img src="https://scontent.fsgn4-1.fna.fbcdn.net/v/t31.0-8/23215532_798795750330785_5177492597318781139_o.jpg?_nc_cat=105&_nc_eui2=AeGZn3DzUkg1cC-NjmPlP3QZP3smKbIPFgQe0o8T1H5uvguAMdpQsqKXKZ8XwhvaaxySTc2XBCJuW4-4OU2nYBncHTCtyvuK-qMo88qVQc85GA&_nc_ht=scontent.fsgn4-1.fna&oh=19845d044d0e2dca97b8c987444f314f&oe=5C984887" alt="..." />
                            </div>
                            <div class="content">
                                <div class="author">
                                    <a href="#">
                                        <img class="avatar border-gray" src="https://scontent.fsgn4-1.fna.fbcdn.net/v/t1.0-9/20294185_757476567796037_8590390526092884953_n.jpg?_nc_cat=101&_nc_eui2=AeEUxFFOc8QJyr4WyHKe8JAkxCdrRG3tXvT396qo6J0GrjA7-hjegmVgyp2025XO1BISJ3DEKlmKBQrtA6QlDz6nyr7asaxmiY22vtX9Tg2jiQ&_nc_ht=scontent.fsgn4-1.fna&oh=32fedbe023472aaffe2dab1376e5f9b5&oe=5C91564F" alt="..." />

                                        <h4 class="title">
                                            Sneaker Store<br />
                                            <small>Thanh Thế</small>
                                        </h4>
                                    </a>
                                </div>
                                <p class="description text-center">
                                    Admin<br>

                                </p>
                            </div>
                            <hr>
                            <div class="text-center">
                                <button href="#" class="btn btn-simple"><i class="fa fa-facebook-square"></i></button>
                                <button href="#" class="btn btn-simple"><i class="fa fa-twitter"></i></button>
                                <button href="#" class="btn btn-simple"><i class="fa fa-google-plus-square"></i></button>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <footer class="footer">
            <div class="container-fluid">

                <p class="copyright pull-right">
                    &copy;
                    <script>document.write(new Date().getFullYear())</script> <a>SneakerFloat</a>, made with love for a better service
                </p>
            </div>
        </footer>
    </div>
</div>

<script src="/js/jquery.3.2.1.min.js" type="text/javascript"></script>
<script src="/js/bootstrap.min.js" type="text/javascript"></script>
<script src="/js/chartist.min.js"></script>
<script src="/js/bootstrap-notify.js" rel="script" type="text/javascript"></script>
<script src="/js/light-bootstrap-dashboard.js?v=1.4.0" rel="script" type="text/javascript"></script>